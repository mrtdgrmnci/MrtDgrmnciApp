{
  "name": "mrt-portfolio",
  "version": "1.0.0",
  "description": "Minimalist Personal Portfolio Website",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "start": "cd backend && npm start",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:coverage": "cd backend && npm run test:coverage && cd ../frontend && npm run test:coverage",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed"
  },
  "keywords": ["portfolio", "react", "nodejs", "express", "sqlite", "minimalist", "testing", "security"],
  "author": "MRT",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 